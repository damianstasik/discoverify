{
  "$schema": "https://biomejs.dev/schemas/1.3.1/schema.json",
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "formatWithErrors": true
  }
}
