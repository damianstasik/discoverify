{
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": "off",
        "noImplicitBoolean": "off",
        "useShorthandArrayType": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "trailingComma": "all",
      "quoteStyle": "single"
    }
  }
}
